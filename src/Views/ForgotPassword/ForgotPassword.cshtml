@using Schematic.Core
@model ForgotPasswordViewModel
@inject IViewLocalizer L

@if (Model.SendReminderSuccess)
{
    <p>@L["Thank you. We have sent you an e-mail. Follow the link provided to reset your password."]</p>
}
else
{
    <form class="sign-in-form" slot="form" asp-controller="Authentication" asp-action="ForgotPassword" method="post">
        <partial name="_ValidationSummaryPartial" view-data="ViewData" />
        <p class="sign-in__intro">@L["Enter the e-mail address associated with your account. We will send you a link that you can use to reset your password."]</p>
        <label asp-for="Email"></label>
        <input asp-for="Email" value="@ViewData["Email"]" />
        <div class="sign-in__submit">
            <button class="resource-button resource-button--primary sign-in__button" type="submit">
                @L["Submit"]
            </button>
        </div>
        @Html.AntiForgeryToken()
    </form>
}