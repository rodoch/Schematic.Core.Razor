@using Schematic.Core
@using Schematic.Core.Mvc
@model ResourceExplorerModel
@inject IHtmlLocalizer<SharedResource> L
@inject IViewLocalizer LView

@{
    ViewData["PageTitle"] = LView["Users"];
}

<schematic-resource-explorer>
    <schematic-resource-editor url="@Url.Content("~/" + @ViewData["UiLocale"] + "/user/")" 
            resource-id="@Model.ResourceID"
            placeholder="@LView["Select a user from the list or create a new user"]"
            no-content="@L["Entry not found"]"
            read-in-progress="@L["Loading"]…"
            read-completed="@L["Ready"]">
        <schematic-resource-editor-toolbar slot="toolbar">
            <schematic-resource-editor-status slot="status"></schematic-resource-editor-status>
            <schematic-resource-button-new in-progress="@L["Loading"]…" completed="@L["Ready"]">
                @L["New"]
            </schematic-resource-button-new>
            <schematic-resource-button-delete in-progress="@L["Deleting"]…" completed="@L["Deleted"]"
                confirm="@L["You are about to delete this entry permanently"]">
                @L["Delete"]
            </schematic-resource-button-delete>
            <schematic-resource-button-create in-progress="@L["Creating"]…" completed="@L["Created"]">
                @L["Create"]
            </schematic-resource-button-create>
            <schematic-resource-button-save in-progress="@L["Saving"]…" completed="@L["Saved"]">
                @L["Save"]
            </schematic-resource-button-save>
        </schematic-resource-editor-toolbar>
    </schematic-resource-editor>

    <schematic-resource-navigator has-filters="false">
        <schematic-resource-search placeholder="@L["Search"]…" ></schematic-resource-search>
        <schematic-resource-list url="@Url.Content("~/" + @ViewData["UiLocale"] + "/user/list/")" 
            active-resource-id="@Model.ResourceID"
            no-content="@L["No result found"]">
        </schematic-resource-list>
    </schematic-resource-navigator>

    <schematic-resource-filters url="@Url.Content("~/" + @ViewData["UiLocale"] + "/user/filter/")"
        filter="@L["Filter"]"
        remove-filters="@L["Remove"]"
        reset-filters="@L["Reset"]">
    </schematic-resource-filters>
</schematic-resource-explorer>